<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comic_list_loading_item_parent_layout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/comic_list_loading_item_card_view"
        android:layout_gravity="center"
        android:layout_width="@dimen/card_width"
        android:layout_height="0dp"
        android:layout_margin="@dimen/card_side_margin"
        android:foreground="?selectableItemBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/comic_list_loading_item_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H,1:1.55"
        >

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/comic_list_loading_item_title"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/comic_list_item_title_height"
        android:padding="5dp"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:background="@drawable/red_round_corners"
        android:text="@string/comic_list_item_loading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comic_list_loading_item_card_view"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
